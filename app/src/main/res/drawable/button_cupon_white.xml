<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_social_corner_radius" />
            <solid android:color="@color/background_coupon_primary"  />
            <stroke android:width="2dp"
                android:color="@color/backgroundText"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_social_corner_radius" />
            <solid android:color="@color/background_coupon_primary"/>
            <stroke android:width="2dp"
                android:color="@color/backgroundText"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_social_corner_radius" />
            <solid android:color="@color/background_coupon_primary"/>
            <stroke android:width="2dp"
                android:color="@color/backgroundText"/>
        </shape>
    </item>
</selector>