<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!--Theme for MaterialDialog Light-->
        <item name="md_background_color">@color/white</item>
        <item name="md_icon">@drawable/ic_notification</item>
        <!--By default, the title text color is derived from the ?android:textColorPrimary system attribute.-->
        <item name="md_title_color">@color/colorAccent</item>
        <!--By default, the positive action text color is derived from the colorAccent attribute of AppCompat or android:colorAccent attribute of the Material theme.-->
        <item name="md_positive_color">@color/colorPrimary</item>
        <!--By default, the negative action text color is derived from the colorAccent attribute of AppCompat or android:colorAccent attribute of the Material theme.-->
        <item name="md_negative_color">@color/colorAccent</item>
        <!--By default, a progress dialog's progress bar, check boxes, and radio buttons have a color that is derived from the colorAccent attribute of AppCompat or android:colorAccent attribute of the Material theme.-->
        <item name="md_widget_color">@color/colorAccent</item>
        <item name="md_item_color">@color/colorPrimary</item>
        <!--The name of font in assets/fonts used on titles and action buttons null uses device default). E.g. [your-project]/app/main/assets/fonts/[medium]-->
        <!--<item name="md_medium_font">Roboto-Light.ttf</item>-->
        <!--The name of font in assets/fonts used everywhere else, like content and list items (null uses device default). E.g. [your-project]/app/main/assets/fonts/[regular]-->
        <!--<item name="md_regular_font">Roboto-Light.ttf</item>-->
        <!--This sets the gravity used while displaying the dialog action buttons, defaults to start.
        START (Default)    Neutral     Negative    Positive
        CENTER:            Negative    Neutral     Positive
        END:               Positive    Negative    Neutral-->
        <item name="md_buttons_gravity">center</item>
    </style>

    <!--Main FloatingButton-->
    <style name="FloatingActionMenuStyle">
        <item name="menu_animationDelayPerItem">50</item>
        <item name="menu_icon">@drawable/fab_add</item>
        <item name="menu_backgroundColor">@color/colorAccentTransTrans</item>
        <item name="menu_buttonSpacing">1dp</item>
        <item name="menu_colorNormal">@color/colorPrimary</item>
        <item name="menu_colorPressed">@color/colorPrimaryLight</item>
        <item name="menu_colorRipple">@color/colorPrimaryLight</item>
        <item name="menu_fab_hide_animation">@anim/hide_to_bottom</item>
        <item name="menu_fab_show_animation">@anim/show_from_bottom</item>
        <item name="fab_size">normal</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="menu_labels_style">@style/FloatingLabelStyle</item>
    </style>

    <!--Child FloatingButton-->
    <style name="FloatingActionButtonStyle">
        <!--<item name="android:tint">@android:color/white</item>-->
        <item name="borderWidth">0dp</item>
        <item name="menu_buttonSpacing">1dp</item>
        <item name="fab_colorNormal">@color/white</item>
        <item name="fab_colorPressed">@color/colorPrimaryLight</item>
        <item name="fab_colorRipple">@color/colorPrimaryLight</item>
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/fab_scale_up</item>
        <item name="fab_hideAnimation">@anim/fab_scale_down</item>
    </style>

    <!--Labels FloatingButton-->
    <style name="FloatingLabelStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge_size</item>
        <item name="android:maxLines">1</item>
        <item name="menu_labels_customFont">@string/font_path_black</item>
        <item name="menu_labels_paddingTop">4dp</item>
        <item name="menu_labels_paddingRight">10dp</item>
        <item name="menu_labels_paddingBottom">4dp</item>
        <item name="menu_labels_paddingLeft">10dp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/colorAccentTransTrans</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <style name="TransparentCompat" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextStyle Definitions -->
    <style name="OptimusTextStyle">
        <item name="textStyle">@integer/font_style_light</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="OptimusTextStyle.Caption"><!--REGULAR-->
