    <style name="OptimusTextStyle.Display"><!--REGULAR-->
        <item name="textStyle">@integer/font_style_regular</item>
    </style>

    <style name="OptimusTextStyle.Display.01">
        <item name="android:textSize">@dimen/font_display_01_size</item>
    </style>

    <style name="OptimusTextStyle.Display.01.Primary"><!--REGULAR-->
