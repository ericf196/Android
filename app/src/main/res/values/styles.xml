    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Splash Scren -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- EditText -->
    <style name="OptimusEditTextStyle">
        <item name="android:textSize">@dimen/font_body_r_size</item>
        <item name="met_typeface">@string/font_path_regular</item>
        <item name="met_accentTypeface">@string/font_path_regular</item>
        <item name="met_floatingLabelTextSize">@dimen/font_caption_size</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_errorColor">@color/colorAccentLight</item>
        <!--
        met_baseColor: The base color of the line and all the texts in non-focus state. Black as default.
        met_primaryColor: The highlight color of the line, and the floating label (if the met_floatingLabel is set to true). Using baseColor as default.
        met_textColor: Same meaning as android:textColor. Just use this instead.
        met_textColorHint: Same meaning as android:textColorHint. Just use this instead.
        met_underlineColor: Custom underline's color.-->

    </style>

    <!--Register-->
    <style name="OptimusEditTextStyle.01" parent="OptimusEditTextStyle">
        <item name="met_baseColor">@color/white</item>
        <item name="met_floatingLabelTextColor">@color/colorPrimary</item>
        <item name="met_primaryColor">@color/colorPrimary</item>
        <item name="met_textColorHint">@color/textColorPrimary</item>
        <item name="met_underlineColor">@color/colorPrimary</item>
    </style>

    <!--Login-->
    <style name="OptimusEditTextStyle.02" parent="OptimusEditTextStyle">
        <item name="met_floatingLabelTextColor">@color/colorPrimary</item>
        <item name="met_primaryColor">@color/colorPrimary</item>
        <item name="met_textColor">@color/textColorPrimary</item>
        <item name="met_textColorHint">@color/textColorPrimary</item>
        <item name="met_underlineColor">@color/colorPrimary</item>
    </style>

    <!--Button-->
    <style name="OptimusButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_social_height</item>
        <item name="android:textSize">@dimen/button_social_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OptimusButton.Primary">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="OptimusButton.Accent">
        <item name="android:background">@drawable/button_accent</item>
    </style>

    <style name="OptimusButton.BorderPrimary">
        <item name="android:background">@drawable/background_primary_border</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OptimusButton.Facebook">
        <item name="android:background">@drawable/button_facebook</item>
    </style>

    <style name="OptimusButton.Google">
        <item name="android:background">@drawable/button_google</item>
    </style>

    <style name="OptimusBettersPickers">
        <item name="bpPreHeaderBackgroundColor">@color/colorPrimary</item>
        <item name="bpHeaderBackgroundColor">@color/colorPrimary</item>
        <item name="bpHeaderSelectedTextColor">@color/colorPrimaryTrans</item>
        <item name="bpHeaderUnselectedTextColor">@color/textColorPrimary</item>

        <item name="bpBodyBackgroundColor">@color/textColorPrimary</item>
        <item name="bpBodySelectedTextColor">@color/textColorPrimary</item>
        <item name="bpBodyUnselectedTextColor">@color/colorPrimary</item>

        <item name="bpButtonsBackgroundColor">@color/colorPrimary</item>
        <item name="bpButtonsTextColor">@color/textColorPrimary</item>
    </style>

    <style name="HashtagView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>

    </style>

    <!--RatingBar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorEnabled</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--Switch-->
    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_body_m_size</item>
    </style>

    <!-- TabLayout -->
    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorBackground</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/textColorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_subheading_size</item>
        <item name="textAllCaps">false</item>
       <!-- <item name="android:textStyle">bold</item>-->
    </style>

    <!--Pager Indicator Style-->
    <style name="PagerIndicatorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>
        <item name="selected_width">6dp</item>
        <item name="selected_height">6dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
        <item name="selected_drawable">@drawable/indicator_slider_full</item>
        <item name="unselected_drawable">@drawable/indicator_slider_empty</item>
    </style>

    <style name="ShadowTextTimeline">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">@string/font_path_black_italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="CustomShowcaseTheme">
        <item name="sv_backgroundColor">@color/colorAccentTransTrans</item>
        <item name="sv_buttonText">OK</item>
    </style>

</resources>
