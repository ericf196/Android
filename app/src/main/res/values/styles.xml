    <style name="OptimusTextStyle.Heading"><!--REGULAR-->
        <item name="textStyle">@integer/font_style_regular</item>
        <item name="android:textSize">@dimen/font_heading_size</item>
    </style>

    <style name="OptimusTextStyle.Heading.Primary"><!--REGULAR-->
