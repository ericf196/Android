<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <com.optimussoftware.boohos.widget.OptimusTextView
        android:id="@+id/mensaje_grow_hacking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/lorem_ipsum_short"
        android:textAlignment="center"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_profile_image"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="7dp">

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/name_contact"
                style="@style/OptimusTextStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leonardo Perez" />

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/country_contact"
                style="@style/OptimusTextStyle.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venezuela" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_primary"
            android:layout_gravity="center">

            <com.mikepenz.iconics.view.IconicsImageView
                android:id="@+id/icon_add"
                android:layout_width="@dimen/icon_size_xxsmall"
                android:layout_height="@dimen/icon_size_xxsmall"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:iiv_color="@color/white"
                android:layout_centerInParent="true" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>