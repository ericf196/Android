<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_padre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/name_advertising"
                style="@style/OptimusTextStyle.Title.Accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/name_category"
                style="@style/OptimusTextStyle.BodyM.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="5dp" />

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/description_advertising"
                style="@style/OptimusTextStyle.BodyR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="2" />

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/read_more"
                style="@style/OptimusTextStyle.BodyM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:text="@string/read_more" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_image_advertising"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/image_advertising"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"
                android:layout_centerInParent="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background_shadow" />

            <com.optimussoftware.boohos.widget.TriangleShapeView
                android:id="@+id/textView1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="47dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo_location"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_profile_image" />

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/text_name_location"
                style="@style/OptimusTextStyle.Title.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="32dp"
                android:ellipsize="end"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/text_name_location">

                <RatingBar
                    android:id="@+id/rating_indicator"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1.0" />

                <com.optimussoftware.boohos.widget.OptimusTextView
                    android:id="@+id/date_advertising"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:textStyle=""
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_shadow_inverse">
            </LinearLayout>

        </RelativeLayout>

        <com.optimussoftware.boohos.widget.AdvertisingActionButtonView
            android:id="@+id/advertising_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea_background"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        android:background="@drawable/linear_shadow"
        android:orientation="horizontal"/>

</LinearLayout>