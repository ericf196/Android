<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.optimussoftware.boohos.main.CuponsFourFragment"
    android:orientation="vertical"
    android:background="@color/background_coupon_primary"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_logo_toolbar"
            android:layout_marginBottom="30dp"
            android:paddingBottom="4dp"
           />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/condition_uso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_title_size_00"
                android:textColor="@color/black"
                android:text="@string/use_condition"
                android:gravity="center_horizontal"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@color/background_coupon_primary" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/description_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="@dimen/font_large_size"
                android:textColor="@color/black"
                android:text="@string/lorem_ipsum"
                android:maxLines="8"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/font_large_size"
                android:textColor="@color/textColorPrimary"
                android:text="@string/read_more_cupon"
                android:layout_gravity="end"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/ending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:minHeight="@dimen/font_small_size"
                android:text="@string/ending"
                android:layout_gravity="start"
                />

            <com.optimussoftware.boohos.widget.OptimusTextView
                android:id="@+id/ending_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/font_small_size"
                android:textColor="@color/black"
                android:text="@string/time"
                android:layout_gravity="start"
                />

        </LinearLayout>


        <com.mikepenz.iconics.view.IconicsButton
            android:id="@+id/visit_page"
            style="@style/OptimusButton.Primary"
            android:gravity="center"
            android:background="@drawable/button_google"
            android:layout_gravity="center"
            android:text="@string/visit_page"
            android:textSize="@dimen/text_size_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_marginTop="25dp"/>


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/use_cupon"
                style="@style/OptimusButton.Primary"
                android:background="@drawable/button_use_cupon"
                android:text="@string/use_cupon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:paddingRight="70dp" />

</LinearLayout>

</LinearLayout>
